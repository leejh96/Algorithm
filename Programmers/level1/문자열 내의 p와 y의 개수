def solution(s):
    answer = True
    countP = 0
    countY = 0
    for i in range(len(s)):
        if s[i] == 'p' or s[i] == 'P':
            countP = countP + 1
        elif s[i] == 'y' or s[i] == 'Y':
            countY = countY + 1
            
    if countP != countY:
        answer = False
    return answer
